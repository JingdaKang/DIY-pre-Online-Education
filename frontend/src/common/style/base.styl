*
  font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
  &::-webkit-scrollbar
    width: 7px
    height: 7px
    background-color: transparent
  &::-webkit-scrollbar-thumb
    border-radius: 20px
    background-color: rgba(0, 0, 0, .2)
  &::-webkit-scrollbar-thumb:hover
    background-color: rgba(32, 160, 255, .8)

  .text-icon
    margin-right: 10px
    position: relative
    top: -2px

  pre
    position: relative
    border: none
    border-radius: 0
    background-color: #f8f8f8
    code
      *
        font-family: Monaco, Consolas !important
      &:after
        position: absolute
        right: 10px
        top: 5px
        content: 'CODE'
        color: #CCC;
    .lang-java
      &:after
        content: 'JAVA'
    .lang-js
      &:after
        content: 'JS'
    .lang-bash
      &:after
        content: 'SHELL'
    .lang-c
      &:after
        content: 'C'
    .lang-cpp
      &:after
        content: 'C++'
    .lang-html
      &:after
        content: 'HTML'
    .lang-css
      &:after
        content: 'CSS'
